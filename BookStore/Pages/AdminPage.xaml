<Page x:Class="BookStore.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="Просмотр авторов" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="100" Click="ViewAuthors_Click"/>
        <Button Grid.Row="0" Grid.Column="1" Content="Просмотр жанров" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="100" Click="ViewGenres_Click"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Просмотр книг" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="100" Click="ViewBooks_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Просмотр заказов" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="100" Click="ViewOrders_Click"/>
    </Grid>
</Page>
