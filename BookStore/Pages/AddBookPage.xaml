<Page x:Class="BookStore.Pages.AddBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBookPage">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название книги:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Автор:" Margin="0,0,0,5"/>
            <ComboBox x:Name="AuthorComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Жанр:" Margin="0,0,0,5"/>
            <ComboBox x:Name="GenreComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Цена:" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Количество:" Margin="0,0,0,5"/>
            <TextBox x:Name="StockTextBox" Margin="0,0,0,10"/>

            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
